@using System.Text.RegularExpressions

@model MailViewModel

@{
    ViewData["Title"] = "Draft";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper ">

    <!-- Main content -->
    <section class="content mt-4 m-2">
        <div class="row">

            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Taslak Kutusu</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mesaj Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    @if (!Model.Mails.Any())
                    {

                        <div class="container mt-5">

                            <hr class="" />
                            <br />
                            <h6 class="text-center font-weight-bold text-primary">
                                Kaydedilmiş taslağınız yok.
                                <br />
                                Taslaklar, daha sonra göndereceğiniz e-postalarınızı kaydedip sakladığınız yerdir.
                            </h6>
                            <br />
                            <br />
                        </div>

                    }
                    else
                    {
                        <div class="card-body p-0">
                            @if (Model.PageInfo.TotalItems > Model.PageInfo.ItemsPerPage)
                            {
                                <div class="mailbox-controls">

                                    <!-- /.btn-group -->
                                    <button type="button" class="btn btn-default btn-sm">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                    <div class="float-right">
                                        @Model.PageInfo.CurrentPage - @Model.PageInfo.ItemsPerPage / @Model.PageInfo.TotalPages()
                                        <div class="btn-group">
                                            @if (Model.PageInfo.CurrentPage > 1)
                                            {
                                                <a href="/Mail/DraftList/?page=@(Model.PageInfo.CurrentPage-1)" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i> </a>
                                            }
                                            @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages())
                                            {
                                                <a href="/Mail/DraftList/?page=@(Model.PageInfo.CurrentPage+1)" class="btn btn-default btn-sm">><i class="fa fa-chevron-right"></i></a>
                                            }
                                        </div>
                                        <!-- /.btn-group -->
                                    </div>
                                    <!-- /.float-right -->
                                </div>
                            }
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="40px">
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="checkall">
                                                    <label for="checkall"></label>
                                                </div>
                                            </th>
                                            <th >
                                                Taslak
                                            </th>
                                            <th>Konu</th>
                                            <th>Mail İçerik</th>
                                            <th>Mail Tarihi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Mails)
                                        {
                                            <tr >
                                                <td width="50px">
                                                    <div class="icheck-primary">
                                                        <input type="checkbox" value="" id="@item.MailId">
                                                        <label for="@item.MailId"></label>
                                                    </div>
                                                </td>
                                                <td class="mailbox-subject align-middle text-danger" width="300px">
                                                    <a href="/Mail/....../@item.MailId" style="color: inherit;"> Taslak </a>
                                                </td>
                                                <td class="mailbox-subject align-middle" width="300px">
                                                    <a href="/Mail/....../@item.MailId" style="color: inherit;"> @item.MailSubject </a>
                                                </td>
                                                <td class="mailbox-subject align-middle">
                                                    @if(item.MailContent is null)
                                                    {
                                                        Func<string, string> RemoveHtmlTags = (input) =>
                                                        {
                                                            if (string.IsNullOrEmpty(input))
                                                                return input;

                                                            var regex = new Regex("<.*?>");
                                                            return regex.Replace(input, "");
                                                        };
                                                        <a href="/Mail/MailDetail/@item.MailId" style="color: inherit;"> @RemoveHtmlTags(item.MailContent) </a>
                                                    }else
                                                    {
                                                        Func<string, string> RemoveHtmlTags = (input) =>
                                                        {
                                                            if (string.IsNullOrEmpty(input))
                                                                return input;

                                                            var regex = new Regex("<.*?>");
                                                            return regex.Replace(input, "");
                                                        };
                                                        <a href="/Mail/MailDetail/@item.MailId" style="color: inherit;"> @RemoveHtmlTags(item.MailContent.Substring(0,2))... </a>
                                                    }
                                                    
                                                </td>
                                                <td class="mailbox-date align-middle" width="300px">@item.MailDate.ToString("dddd, dd MMMM yyyy") -  @item.MailTime.ToString("hh\\:mm")</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>


