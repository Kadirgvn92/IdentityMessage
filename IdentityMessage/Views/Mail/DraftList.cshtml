@using System.Text.RegularExpressions

@model MailViewModel

@{
    ViewData["Title"] = "Draft";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-wrapper ">

    <!-- Main content -->
    <section class="content mt-4 m-2">
        <div class="row">

            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Taslak Kutusu</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mesaj Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    @if (!Model.Mails.Any())
                    {

                        <div class="container mt-5">

                            <hr class="" />
                            <br />
                            <h6 class="text-center font-weight-bold text-primary">
                                Kaydedilmiş taslağınız yok.
                                <br />
                                Taslaklar, daha sonra göndereceğiniz e-postalarınızı kaydedip sakladığınız yerdir.
                            </h6>
                            <br />
                            <br />
                        </div>

                    }
                    else
                    {
                        <div class="card-body p-0">
                            <div class="mailbox-controls">
                                <div class="icheck-primary float-left ml-3 mr-1" width="50px">
                                    <input type="checkbox" value="" id="checkall">
                                    <label for="checkall"></label>
                                </div>
                                <!-- /.btn-group -->
                                <button type="button" class="btn btn-default btn-sm bg-danger ml-3">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <div class="float-right">
                                    @Model.PageInfo.CurrentPage - @Model.PageInfo.ItemsPerPage / @Model.PageInfo.TotalPages()
                                    <div class="btn-group">
                                        @if (Model.PageInfo.CurrentPage > 1)
                                        {
                                            <a href="/Mail/DraftList/?page=@(Model.PageInfo.CurrentPage-1)" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i> </a>
                                        }
                                        @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages())
                                        {
                                            <a href="/Mail/DraftList/?page=@(Model.PageInfo.CurrentPage+1)" class="btn btn-default btn-sm">><i class="fa fa-chevron-right"></i></a>
                                        }
                                    </div>
                                    <!-- /.btn-group -->
                                </div>
                                <!-- /.float-right -->
                            </div>
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover">
                                    <tbody>
                                        @foreach (var item in Model.Mails)
                                        {
                                            <tr>
                                                <td width="50px">
                                                    <div class="icheck-primary">
                                                        <input type="checkbox" value="" id="@item.MailId">
                                                        <label for="@item.MailId"></label>
                                                    </div>
                                                </td>
                                                <td class="mailbox-subject align-middle text-danger text-center" width="300px">
                                                    <a href="/Mail/CreateMail/@item.MailId" style="color: inherit;"> Taslak </a>
                                                </td>
                                                <td class="align-middle " width="1500px">
                                                    <b><a href="/Mail/CreateMail/@item.MailId" style="color: inherit;"> @item.MailSubject </a></b>
                                                    @if (item.MailContent is null || item.MailContent.Length < 200)
                                                    {
                                                        Func<string, string> RemoveHtmlTags = (input) =>
                                                        {
                                                            if (string.IsNullOrEmpty(input))
                                                                return input;

                                                            var regex = new Regex("<.*?>");
                                                            return regex.Replace(input, "");
                                                        };
                                                        <a class="mailbox-read-time" href="/Mail/CreateMail/@item.MailId" style="color: inherit;"> @RemoveHtmlTags(item.MailContent) </a>
                                                    }
                                                    else
                                                    {
                                                        var last = item.MailContent.Substring(0, 200).LastIndexOf(" ");
                                                        Func<string, string> RemoveHtmlTags = (input) =>
                                                        {
                                                            if (string.IsNullOrEmpty(input))
                                                                return input;

                                                            var regex = new Regex("<.*?>");
                                                            return regex.Replace(input, "");
                                                        };
                                                        <a class="mailbox-read-time" href="/Mail/CreateMail/@item.MailId" style="color: inherit;"> @RemoveHtmlTags(item.MailContent.Substring(0, last))... </a>
                                                    }

                                                </td>
                                                <td class="mailbox-read-time align-middle" width="300px">@item.MailDate.ToString("dddd, dd MMMM yyyy") -  @item.MailTime.ToString("hh\\:mm")</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

