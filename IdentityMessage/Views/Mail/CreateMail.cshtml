@model MailViewModel

@{
    ViewData["Title"] = "CreateMail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<div class="content-wrapper">
    <section class="content m-3 mt-0">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 ">
                    <form method="post" enctype="multipart/form-data">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mail</h3>
                            </div>

                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Kime :" asp-for="ToUserEmail">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Konu : " asp-for="MailSubject">
                                </div>
                                <div class="form-group">
                                    <label for="Body">Mesajınız</label>
                                    <div id="editor" style="height: 300px;"></div>
                                    <input type="hidden" id="Body" asp-for="MailContent">
                                </div>
                            </div>
                            @if (ViewBag.EmailError != null)
                            {
                                <div class="alert alert-danger">
                                    <p>@ViewBag.EmailError</p>
                                </div>
                            }
                            @if (ViewBag.ErrorMessages != null)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewBag.ErrorMessages)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslağa Kaydet</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Sil</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
    var quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
            toolbar: [
                [{ header: [1, 2, false] }],
                ['bold', 'italic', 'underline', 'strike'],
                ['blockquote', 'code-block'],
                [{ color: [] }],
                [{ list: 'ordered' }, { list: 'bullet' }],
                ['link', 'image', 'video'],
                ['clean']
            ],
        },
    });
    quill.on('text-change', function () {
        document.getElementById('Body').value = quill.root.innerHTML;
    });
</script>